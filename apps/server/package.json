    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "hono": "catalog:",
    "hono-pino": "^0.10.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@INVENEASE/config": "workspace:*",
