{
  "name": "INVENEASE",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.10.7",
      "@orpc/server": "^1.11.3",
      "@orpc/openapi": "^1.11.3",
      "@orpc/zod": "^1.11.3",
      "better-auth": "^1.4.3",
      "dotenv": "^17.2.3",
      "@orpc/client": "^1.11.3",
      "@prisma/client": "^7.0.0",
      "zod": "^4.1.13"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @INVENEASE/db db:push",
    "db:studio": "turbo -F @INVENEASE/db db:studio",
    "db:generate": "turbo -F @INVENEASE/db db:generate",
    "db:migrate": "turbo -F @INVENEASE/db db:migrate",
    "clean": "turbo clean && rm -rf node_modules",
    "clean:deep": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' +"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@types/bun": "^1.3.3",
    "turbo": "^2.6.1",
    "ultracite": "6.3.7"
  },
  "packageManager": "bun@1.3.3"
}
